<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zsg="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebef"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ji"
        android:layout_width="98dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ji"
        zsg:layout_constraintEnd_toEndOf="parent"
        zsg:layout_constraintStart_toStartOf="parent"
        zsg:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/right"
        zsg:layout_constraintEnd_toEndOf="parent"
        zsg:layout_constraintHorizontal_bias="0.678"
        zsg:layout_constraintStart_toEndOf="@+id/textView"
        zsg:layout_constraintTop_toTopOf="@+id/view1" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        zsg:layout_constraintEnd_toEndOf="parent"
        zsg:layout_constraintHorizontal_bias="0.0"
        zsg:layout_constraintStart_toStartOf="parent"
        zsg:layout_constraintTop_toBottomOf="@+id/ji" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        zsg:layout_constraintEnd_toEndOf="parent"
        zsg:layout_constraintHorizontal_bias="0.0"
        zsg:layout_constraintStart_toStartOf="parent"
        zsg:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="198dp"
        android:layout_height="38dp"
        android:layout_marginTop="44dp"
        android:gravity="left"
        android:text="我的收藏"
        android:textSize="20sp"
        zsg:layout_constraintEnd_toEndOf="parent"
        zsg:layout_constraintHorizontal_bias="0.497"
        zsg:layout_constraintStart_toStartOf="parent"
        zsg:layout_constraintTop_toBottomOf="@+id/ji" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/favourite"
        zsg:layout_constraintEnd_toStartOf="@+id/textView"
        zsg:layout_constraintHorizontal_bias="0.402"
        zsg:layout_constraintStart_toStartOf="parent"
        zsg:layout_constraintTop_toTopOf="@+id/view1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="20dp"
        android:layout_height="40dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/right"
        zsg:layout_constraintEnd_toEndOf="parent"
        zsg:layout_constraintHorizontal_bias="0.678"
        zsg:layout_constraintStart_toEndOf="@+id/textView"
        zsg:layout_constraintTop_toTopOf="@+id/view1" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        zsg:layout_constraintEnd_toEndOf="parent"
        zsg:layout_constraintHorizontal_bias="0.0"
        zsg:layout_constraintStart_toStartOf="parent"
        zsg:layout_constraintTop_toBottomOf="@+id/view2" />

    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="112dp"
        android:background="@color/black"
        zsg:layout_constraintEnd_toEndOf="parent"
        zsg:layout_constraintHorizontal_bias="0.0"
        zsg:layout_constraintStart_toStartOf="parent"
        zsg:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="198dp"
        android:layout_height="38dp"
        android:layout_marginTop="140dp"
        android:gravity="left"
        android:text="历史记录"
        android:textSize="20sp"
        zsg:layout_constraintEnd_toEndOf="parent"
        zsg:layout_constraintHorizontal_bias="0.497"
        zsg:layout_constraintStart_toStartOf="parent"
        zsg:layout_constraintTop_toBottomOf="@+id/ji" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="124dp"
        android:src="@drawable/history"
        zsg:layout_constraintEnd_toStartOf="@+id/textView"
        zsg:layout_constraintHorizontal_bias="0.394"
        zsg:layout_constraintStart_toStartOf="parent"
        zsg:layout_constraintTop_toTopOf="@+id/view1" />
</androidx.constraintlayout.widget.ConstraintLayout>
